<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/color_background</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">false</item>
        <item name="android:windowAllowReturnTransitionOverlap">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="Theme.AppCompat.Light" />

    <style name="AppTheme.Red">
        <item name="colorPrimary">@color/theme_red_primary</item>
        <item name="colorPrimaryDark">@color/theme_red_primary_dark</item>
        <item name="android:windowBackground">@color/theme_red_background</item>
    </style>

    <style name="AppTheme.Blue">
        <item name="colorPrimary">@color/theme_blue_primary</item>
        <item name="colorPrimaryDark">@color/theme_blue_primary_dark</item>
        <item name="android:windowBackground">@color/theme_blue_background</item>
    </style>

    <style name="AppTheme.Green">
        <item name="colorPrimary">@color/theme_green_primary</item>
        <item name="colorPrimaryDark">@color/theme_green_primary_dark</item>
        <item name="android:windowBackground">@color/theme_green_background</item>
    </style>

    <style name="AppTheme.Yellow">
        <item name="colorPrimary">@color/theme_yellow_primary</item>
        <item name="colorPrimaryDark">@color/theme_yellow_primary_dark</item>
        <item name="android:windowBackground">@color/theme_yellow_background</item>
    </style>

    <style name="AppTheme.Purple">
        <item name="colorPrimary">@color/theme_purple_primary</item>
        <item name="colorPrimaryDark">@color/theme_purple_primary_dark</item>
        <item name="android:windowBackground">@color/theme_purple_background</item>
    </style>

    <style name="AppTheme.Icon">
        <item name="android:layout_margin">10dp</item>
    </style>

    <style name="AppTheme.Icon.Big">
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
    </style>

    <style name="AppTheme.Icon.Medium">
        <item name="android:layout_width">84dp</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="AppTheme.Icon.Medium.Scaled">
        <item name="android:alpha">0</item>
        <item name="android:scaleX">0.5</item>
        <item name="android:scaleY">0.5</item>
    </style>

    <style name="AppTheme.Icon.Small">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
    </style>

</resources>
